  "/cadLivro/create-livro": {
      "post": {
        "summary": "Cadastrar um novo livro",
        "description": "Permite que um administrador cadaste um novo livro na biblioteca.",
        "tags": ["Livros"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nomeLivro": {
                    "type": "string",
                    "description": "Nome do livro"
                  },
                  "autor": {
                    "type": "string",
                    "description": "Autor do livro"
                  },
                  "preco": {
                    "type": "number",
                    "format": "float",
                    "description": "Preço do livro"
                  }
                },
                "required": ["nomeLivro", "autor", "preco"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Livro cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Livro cadastrado com sucesso"
                    },
                    "livro": {
                      "type": "object",
                      "properties": {
                        "nomeLivro": {
                          "type": "string"
                        },
                        "autor": {
                          "type": "string"
                        },
                        "preco": {
                          "type": "number",
                          "format": "double"
                        },
                        "disponivel": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação dos campos obrigatórios ou livro já cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
